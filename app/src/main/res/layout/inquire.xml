<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
           android:src="@drawable/menu" />

        <TextView
            android:id="@+id/inqu1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="문의하기"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/inqu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="T : +31 20 822 0094"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/inqu3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="F : +31 20 822 0126"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/inqu4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="M : +31 639 520 / +31 681 485 877"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inqu5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="E-mail :" />

        <TextView
            android:id="@+id/inqu6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="info@knpkonet.com"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/inqu7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="info@knpkonet.com" />


    <TextView
        android:id="@+id/inqu8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="카카오톡 ID : Knpkonet 또는 KNP-KONET" />

    <TextView
        android:id="@+id/inqu9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="주소 : Maimonideslaan 186, 1186DV \nAmstelveen The Netherlands" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_marginTop="70dp"
        android:text="이름 : Name" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="E-mail*"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="text"
        android:text="내용 (Message)"
        android:textSize="20sp" />

    <Button
        android:id="@+id/inqubtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전송하기 (send)" />

</LinearLayout>